@model IEnumerable<DailyTrack.Models.Activity>

@{
    ViewBag.Title = "Index";
}

<h2>Activities</h2>
<activity-list params="text: NewActivityText">

</activity-list>
<p>
    <input type="text" id="newActivityName" data-bind="value: NewActivityText" />
    <input type="button" value="Add Activity" data-bind="click: fnAddNewActivity" />
</p>
<h2>Your daily activities</h2>
<div class="form-group">
    <div clsss="row">
    <div class="col-lg-3 col-md-3">Completed</div>s
    <div class="col-lg-3 col-md-3">Id</div>
    <div class="col-lg-3 col-md-3">Activity</div>
    <div class="col-lg-3 col-md-3">StartActivity</div>
    </div>

    <div data-bind="foreach: Activities">
        <div class="row"></div>
        <div class="col-lg-3"><input type="checkbox" data-bind="checked: Completed" /> </div>
       <!--<div class="col-lg-3"><input type="checkbox" data-bind="checked:Uncompleted" /> </div>-->
