        <input type="button" value="Start Activity!" onclick="doTimer()">
        <input type="text" id="txt" />
        <input type="button" value="Stop Activity!" onclick="stopCount()">
    </form> -->




    @section Scripts {
        @Scripts.Render("~/bundles/app")
    }
